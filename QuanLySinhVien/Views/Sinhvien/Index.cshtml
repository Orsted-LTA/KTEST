@model IEnumerable<QuanLySinhVien.Models.SinhVien>

@{
    ViewData["Title"] = "Trang Sinh Viên";
}
<a href="@Url.Action("DangXuat", "NguoiDung")" class=" "></a>

<h1>TRANG SINH VIÊN</h1>


<table class="table">
    <thead>
        <tr>
            <th>MaSv</th>
            <th>HoTen</th>
            <th>GioiTinh</th>
            <th>NgaySinh</th>
            <th>Hinh</th>
            <th>MaNganh</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sinhVien in Model)
        {
            <tr>
                <td>@sinhVien.MaSv</td>
                <td>@sinhVien.HoTen</td>
                <td>@sinhVien.GioiTinh</td>
                <td>@sinhVien.NgaySinh?.ToString("dd/MM/yyyy")</td> <!-- Chỉ hiển thị ngày sinh -->
                <td>
                    @if (!string.IsNullOrEmpty(sinhVien.Hinh))
                    {
                        <img src="@sinhVien.Hinh" alt="Hình ảnh" width="100" height="100" />
                    }
                    else
                    {
                        <span>Chưa có hình</span>
                    }
                </td>
                <td>@sinhVien.MaNganhNavigation?.TenNganh</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sinhVien.MaSv">Edit</a> |
                    <a asp-action="Details" asp-route-id="@sinhVien.MaSv">Details</a> |
                    <a asp-action="Delete" asp-route-id="@sinhVien.MaSv">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create">Thêm Sinh Viên Mới</a>
</div>